<?xml version="1.0" encoding="utf-8" ?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Maturity\Model\SurveyReferentielQuestion" table="survey_referentiel_question">

        <id name="id" column="id" type="uuid"/>
        <field name="name" column="name"/>
        <field name="weight" column="weight" type="integer"/>
        <field name="orderNumber" column="order_number" type="integer"/>
        <field name="option" column="option" type="boolean" nullable="true"/>
        <field name="optionReason" column="option_reason" nullable="true"/>

        <many-to-one field="surveyReferentielSection" target-entity="App\Domain\Maturity\Model\SurveyReferentielSection" inversed-by="SurveyReferentielQuestions"/>

        <one-to-many field="surveyReferentielAnswers" target-entity="App\Domain\Maturity\Model\SurveyReferentielAnswer" mapped-by="surveyReferentielQuestion">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

    </entity>

</doctrine-mapping>
