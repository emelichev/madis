<?xml version="1.0" encoding="utf-8" ?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Maturity\Model\SurveyReferentielSection" table="survey_referentiel_section">

        <id name="id" column="id" type="uuid"/>
        <field name="name" column="name"/>
        <field name="description" column="description"/>
        <field name="orderNumber" column="order_number" type="integer"/>

        <many-to-one field="surveyReferentiel" target-entity="App\Domain\Maturity\Model\SurveyReferentiel" inversed-by="surveyReferentielSections"/>

        <one-to-many field="surveyReferentielQuestions" target-entity="App\Domain\Maturity\Model\SurveyReferentielQuestion" mapped-by="surveyReferentielSection">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>
