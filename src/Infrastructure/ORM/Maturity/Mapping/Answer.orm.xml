<?xml version="1.0" encoding="utf-8" ?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Maturity\Model\Answer" table="maturity_answer">

        <id name="id" column="id" type="uuid"/>

        <field name="response" column="response" type="integer"/>
        
        <many-to-many field="question" target-entity="App\Domain\Maturity\Model\Question">
            <join-table name="question_answer">
                <join-columns>
                    <join-column/>
                </join-columns>
                <inverse-join-columns>
                    <join-column/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-one field="survey" target-entity="App\Domain\Maturity\Model\Survey" inversed-by="answers"/>

    </entity>

</doctrine-mapping>
