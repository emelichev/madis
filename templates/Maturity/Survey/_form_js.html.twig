<script>
    $(document).ready(function() {
        $('.question-option').on('change', function(ev) {
            var $ch = $(ev.currentTarget);

            if ($ch.is(":checked")) {
                $ch.parent().parent().parent().find('li.answer input').removeAttr('required').removeAttr('checked')
            } else {
                $ch.parent().parent().parent().find('li.answer input').attr('required', true)
            }
        })
        $('.question-option').each(function(el) {
            var $ch = $(el);
            if ($ch.is(":checked")) {
                $ch.parent().parent().parent().find('li.answer input').removeAttr('required').removeAttr('checked')
            } else {
                $ch.parent().parent().parent().find('li.answer input').attr('required', true)
            }
        })
        $('.answer-input').on('change', function(ev) {
            var $ch = $(ev.currentTarget);
            if ($ch.is(":checked")) {
                $ch.parent().parent().parent().find('li.optional input').removeAttr('required').removeAttr('checked')
            }
        })
        $('.answer-input').each(function(el) {
            var $ch = $(el);
            if ($ch.is(":checked")) {
                $ch.parent().parent().parent().find('li.optional input').removeAttr('required').removeAttr('checked')
            }
        })
    })

</script>
