{% extends 'base.html.twig' %}

{% set bodyClass = 'maturity_survey list' %}
{% set menuItem = 'maturity_survey' %}

{% block title %}{{ 'maturity.survey.title.list'|trans }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" href="//cdn.datatables.net/buttons/1.6.2/css/buttons.dataTables.min.css">
{% endblock %}

{% block body_head %}
    <h1>{{ 'maturity.survey.title.list'|trans }}</h1>
{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        { 'name': 'maturity.survey.title.list'|trans }
    ] %}
    {% include '_breadcrumb.html.twig' with {'breadcrumb': breadcrumb} %}
{% endblock %}

{% block body %}
    <div class="row">
            <div class="col-xs-12">
                <div class="action-bar">
                    {% if is_granted('ROLE_USER') %}
                    <a aria-label="{{ 'maturity.survey.action.new'|trans }}" href="{{ path('maturity_survey_start') }}" class="btn btn-default">
                        <i class="fa fa-plus"></i>
                        {{ 'maturity.survey.action.new'|trans }}
                    </a>
                    {% endif %}
                </div>
            </div>

    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box box-solid">
                <div class="box-body">
                    <table role="presentation" id="table" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            {% if is_granted('ROLE_REFERENT') %}
                                <th scope="col">{{ 'maturity.survey.list.collectivity'|trans }}</th>
                            {% endif %}

                            <th scope="col">{{ 'maturity.survey.list.referentiel'|trans }}</th>
                            <th scope="col">{{ 'maturity.survey.list.score'|trans }}</th>
                            <th scope="col">{{ 'maturity.survey.list.created_at'|trans }}</th>
                            <th scope="col">{{ 'maturity.survey.list.updated_at'|trans }}</th>

                            <th scope="col">{{ 'label.actions'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for object in objects %}
                        <tr>
                            {% if is_granted('ROLE_REFERENT') %}
                                <td>{{ object.collectivity }}</td>
                            {% endif %}
                            <td>
                                {% if is_granted('ROLE_ADMIN') and object.referentiel is defined and object.referentiel.id is defined %}
                                <a href="{{ path('maturity_referentiel_edit', { 'id': object.referentiel.id }) }}">
                                {{ object.referentiel.name }}
                                </a>
                                {% elseif(object.referentiel is defined and object.referentiel.name is defined) %}
                                    {{ object.referentiel.name }}
                                {% endif %}
                            </td>
                            <td>{{ object.score / 10 }}</td>
                            <td>{{ object.createdAt|date('d/m/Y H:i') }}</td>
                            <td>{{ object.updatedAt|date('d/m/Y H:i') }}</td>
                            <td>
                                {% if object.referentiel is defined and object.referentiel.id is defined  %}
                                <a aria-label="{{ 'action.print'|trans }}" href="{{ path('maturity_survey_report', { 'id': object.id }) }}">
                                    <i class="fa fa-clipboard-list"></i>
                                    {{ 'action.print'|trans }}
                                </a>
                                {% endif %}
                                {% if is_granted('ROLE_USER') %}
                                {% if object.referentiel is defined and object.referentiel.id is defined %}
                                <a aria-label="{{ 'action.edit'|trans }}" href="{{ path('maturity_survey_edit', { 'id': object.id }) }}">
                                    <i class="fa fa-pencil-alt"></i>
                                    {{ 'action.edit'|trans }}
                                </a>
                                {% endif %}
                                <a aria-label="{{ 'action.delete'|trans }}" href="{{ path('maturity_survey_delete', { 'id': object.id }) }}">
                                    <i class="fa fa-trash"></i>
                                    {{ 'action.delete'|trans }}
                                </a>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% if is_granted('ROLE_REFERENT') %}
    {% set dataTableOptions = {
        columns: [
            {"data": "collectivity", "classname": "noVis"},
            {"data": "referentiel"},
            {"data": "score", "visible": true},
            {"data": "createdAt", "visible": false},
            {"data": "updatedAt", "visible": false},
            {"data": "actions", "className": "noVis", "orderable": false}
        ]
    } %}
    {% else %}
        {% set dataTableOptions = {
            columns: [
                {"data": "referentiel"},
                {"data": "score", "visible": true},
                {"data": "createdAt", "visible": false},
                {"data": "updatedAt", "visible": false},
                {"data": "actions", "className": "noVis", "orderable": false}
            ]
        } %}
    {% endif %}

    {{ include('_Utils/_datatable.html.twig') }}
{% endblock %}
