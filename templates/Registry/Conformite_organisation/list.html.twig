{% extends 'base.html.twig' %}

{% set bodyClass = 'registry_conformite_organisation list' %}
{% set menuItem = 'registry_conformite_organisation' %}

{% block title %}{{ 'registry.conformite_organisation.title.list'|trans }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css">
{% endblock %}

{% block body_head %}
    <h1>{{ 'registry.conformite_organisation.title.list'|trans }}</h1>
{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        { 'name': 'registry.conformite_organisation.title.list'|trans }
    ] %}
    {% include '_breadcrumb.html.twig' with {'breadcrumb': breadcrumb} %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="action-bar">
{#                <a href="{{ path('registry_conformite_organisation_report') }}" class="btn btn-default">#}
{#                    <i class="fa fa-clipboard-list"></i>#}
{#                    {{ 'registry.conformite_organisation.action.report'|trans }}#}
{#                </a>#}
            </div>
        </div>
    </div>

    {% if not is_granted('ROLE_ADMIN') %}
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-solid">
                    <div class="box-body">
                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'registry.conformite_organisation.list.pilote'|trans }}</th>
                                <th>{{ 'registry.conformite_organisation.list.processus'|trans }}</th>
                                <th>{{ 'registry.conformite_organisation.list.conformite'|trans }}</th>
                                <th>{{ 'registry.conformite_organisation.list.action_protection'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% if evaluations is not empty %}
                                {% for conformite in getConformitesOrderedByPosition(evaluations|first) %}
                                    <tr>
                                        <td>{{ conformite.pilote }}</td>
                                        <td>{{ conformite.processus.nom }}</td>
                                        <td>
                                            {% if conformite.conformite < 2.5 %}
                                                <span class="label label-danger">{{ conformite.conformite }}</span>
                                            {% elseif conformite.conformite < 3.5 %}
                                                <span class="label label-warning">{{ conformite.conformite }}</span>
                                            {% else %}
                                                <span class="label label-success">{{ conformite.conformite }}</span>
                                            {% endif %}

                                        </td>
                                        <td>
                                            {% for action in conformite.NonAppliedActionProtections %}
                                            {{ action.name }}
                                            {% endfor %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-xs-12">
            <div class="box box-solid">
                <div class="box-body">
                    <table id="table" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            {% if is_granted('ROLE_ADMIN') %}
                                <th>{{ 'registry.conformite_organisation.list.collectivite'|trans }}</th>
                            {% endif %}
                            <th>{{ 'registry.conformite_organisation.list.date_creation'|trans }}</th>
                            <th>{{ 'registry.conformite_organisation.list.nb_participants'|trans }}</th>
                            <th>{{ 'registry.conformite_organisation.list.actions'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for evaluation in evaluations %}
                            <tr>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <td>{{ evaluation.organisation.name }}</td>
                                {% endif %}
                                <td>{{ evaluation.date|date('d/m/Y H:i') }}</td>
                                <td>{{ evaluation.participants|length }}</td>
                                <td>
                                    <a href="{{ path('registry_conformite_organisation_edit', {'id': evaluation.id}) }}">
                                        <i class="fa fa-eye"></i>
                                        {{ 'registry.conformite_organisation.action.edit_conformite_organisation'|trans }}
                                    </a>
                                    <a href="{{ path('registry_conformite_organisation_delete', {'id': evaluation.id}) }}">
                                        <i class="fa fa-eye"></i>
                                        {{ 'registry.conformite_organisation.action.delete_conformite_organisation'|trans }}
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ include('_Utils/_datatable.html.twig') }}
{% endblock %}
