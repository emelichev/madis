{% block javascripts %}
    {{ include('Registry/Mesurement/_modal_form_js.html.twig') }}
    {{ include('Registry/Conformite_organisation/_form_js.html.twig') }}

    <script src="{{ asset('build/js/collectionManager.js') }}"></script>
