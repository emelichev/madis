{% extends 'base.html.twig' %}

{% set bodyClass = 'registry_conformite_traitement list' %}
{% set menuItem = 'registry_conformite_traitement' %}

{% block title %}{{ 'registry.conformite_traitement.title.list'|trans }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css">
{% endblock %}

{% block body_head %}
    <h1>{{ 'registry.conformite_traitement.title.list'|trans }}</h1>
{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        { 'name': 'registry.conformite_traitement.title.list'|trans }
    ] %}
    {% include '_breadcrumb.html.twig' with {'breadcrumb': breadcrumb} %}
{% endblock %}

{% block body %}
    <div class="row">
            <div class="col-xs-12">
                <div class="action-bar">
                    <a href="{{ path('registry_conformite_traitement_report') }}" class="btn btn-default">
                        <i class="fa fa-clipboard-list"></i>
                        {{ 'registry.conformite_traitement.action.report'|trans }}
                    </a>
                </div>
            </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box box-solid">
                <div class="box-body">
                    <table id="table" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>{{ 'registry.conformite_traitement.list.traitement'|trans }}</th>
                            <th>{{ 'registry.conformite_traitement.list.gestionnaire'|trans }}</th>
                            <th>{{ 'registry.conformite_traitement.list.conformite'|trans }}</th>
                            <th>{{ 'registry.conformite_traitement.list.conformite_reponse'|trans }}</th>
                            <th>{{ 'registry.conformite_traitement.list.date_conformite'|trans }}</th>
                            <th>{{ 'label.actions'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for object in objects %}
                            {% set conformiteTraitement = object.conformiteTraitement %}
                            {% if conformiteTraitement is not null %}
                                {% set nbTotal = conformiteTraitement.nbConformes + conformiteTraitement.nbNonConformesMineures + conformiteTraitement.nbNonConformesMajeures %}
                                {% set widthNbConforme = ((conformiteTraitement.nbConformes * 100) / nbTotal)|round %}
                                {% set widthnbNonConformesMineures = ((conformiteTraitement.nbNonConformesMineures * 100) / nbTotal)|round %}
                                {% set widthnbNonConformesMajeures = 100 - (widthNbConforme + widthnbNonConformesMineures) %}
                                {% if conformiteTraitement.nbNonConformesMajeures >= 1 or conformiteTraitement.nbNonConformesMineures >= 3 %}
                                    {% set conformiteBackgroundColor = 'rouge' %}
                                {% elseif conformiteTraitement.nbNonConformesMineures >= 1 %}
                                    {% set conformiteBackgroundColor = 'orange' %}
                                {% else %}
                                    {% set conformiteBackgroundColor = 'vert' %}
                                {% endif %}
                            {% endif %}
                            <tr>
                                <td>{{ object.name }}</td>
                                <td>{{ object.manager }}</td>
                                <td {% if conformiteBackgroundColor is defined %}class="conformite-backgound-color-{{ conformiteBackgroundColor }}"{% endif %}></td>
                                <td>
                                    {% if conformiteTraitement is not null %}
                                        <div class="stacked-bar-graph">
                                            {% if widthNbConforme %}<span style="width:{{ widthNbConforme }}%" class="bar-conforme"></span>{% endif %}
                                            {% if widthnbNonConformesMineures %}<span style="width:{{ widthnbNonConformesMineures }}%" class="bar-non-conforme-mineure"></span>{% endif %}
                                            {% if widthnbNonConformesMajeures %}<span style="width:{{ widthnbNonConformesMajeures }}%" class="bar-non-conforme-majeure"></span>{% endif %}
                                        </div>
                                    {% endif %}
                                </td>
                                <td></td>
                                <td>
                                    <a href="{% if conformiteTraitement is null %}{{ path('registry_conformite_traitement_create', {'idTraitement': object.id}) }}{% else %}{{ path('registry_conformite_traitement_edit', {'id': conformiteTraitement.id}) }}{% endif %}">
                                        <i class="fa fa-eye"></i>
                                        {{ 'registry.conformite_traitement.action.show_conformite_traitement'|trans }}
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

