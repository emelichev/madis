<script src="{{ asset('assets/dataTables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('assets/dataTables/dataTables.bootstrap.min.js') }}"></script>
<script src="{{ asset('assets/dataTables/date-uk.js') }}"></script>

<script>
    {% set languageUrl = asset('assets/dataTables/French.json') %}
    {% set dataTableOptions = dataTableOptions|default({}) %}

    $(function () {

        {% set paging = false %}
        {% if is_granted('ROLE_ADMIN') %}
            {% set paging = true %}
        {% endif %}

        {% set dataTableOptions = dataTableOptions|merge({
            "language": {
                "url": languageUrl,
            },
            'paging'      : paging,
            'lengthChange': false,
            'searching'   : true,
            'ordering'    : true,
            'info'        : false,
            'autoWidth'   : false,
        })%}

        $('#table').DataTable({{ dataTableOptions|json_encode|raw }});
    });
</script>
