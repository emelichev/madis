        <img class="fit-picture" src="{{ asset(app_image_logo_couleur) }}" width="80%" alt="Logo Madis">
    </div>
    <div class="login-box-body">
        <h3 class="login-box-title">
            {{ 'user.security.title.locked'|trans }}
        </h3>
        <p class="login-box-msg">{{ 'user.security.locked.message'|trans }}</p>
    </div>
{% endblock %}
